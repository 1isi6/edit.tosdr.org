<div class="title">
  <h2>
    <strong>Terms of Service;</strong> Didn't Read
  </h2>
  <p>
    The Internet's fine print, written for humans, not lawyers.
  </p>
</div>
<div class="col-xs-12 text-center search-bar">
  <%= render "shared/searchbar" %>
</div>
<% @services = Service.all %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <!-- CARD -->
      <% @services.each do |s| %>
      <% if s.service_ratings == "A" %>
        <% grade = "rating-a" %>
      <% elsif s.service_ratings == "B" %>
        <% grade = "rating-b" %>
      <% elsif s.service_ratings == "C" %>
        <% grade = "rating-c" %>
      <% elsif s.service_ratings == "D" %>
        <% grade = "rating-d" %>
      <% elsif s.service_ratings == "F" %>
        <% grade = "rating-f" %>
      <% else %>
        <% grade = "rating-na" %>
      <% end %>
      <div class="card">
        <div class="card-service">
          <%= s.name %>
        </div>
        <div class="card-block">
          <div class="card-left">
            <div class="card-left-item card-badge <%= grade %>">
              <%= s.service_ratings %>
            </div>
            <%= link_to "More", service_path(s.id), class: "btn btn-primary" %>
          </div>
          <div class="card-text">
            <% s.points.each do |p| %>
            <% if p.is_featured? %>
            <% if p.rating.between?(7,10) %>
            <ul>
              <li class="point-good xs-icon">
                <%= p.title  %>
              </li>
            </ul>
            <% elsif p.rating.between?(4,6) %>
            <ul>
              <li class="point-neutral xs-icon">
                <%= p.title  %>
              </li>
            </ul>
            <% elsif p.rating.between?(2,3) %>
            <ul>
              <li class="point-bad xs-icon">
                <%= p.title  %>
              </li>
            </ul>
            <% elsif p.rating.between?(0,2) %>
            <ul>
              <li class="point-blocker xs-icon">
                <%= p.title  %>
              </li>
            </ul>
            <% end %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <!-- CARD-END -->
    </div>
  </div>
</div>


  <div class="row mb15">
    <div class="col-sm-6">
      <h2 class="service-title fw2 mv fl">
        <a href="<%= @service.url %>"><%= @service.name %></a>
        <% unless @service.service_ratings == "N/A" %>
        <div class="grade <%= @rating %>">
          <%= @service.service_ratings %>
        </div>
        <% end %>
      </h2>
    </div>
    <div class="col-sm-6">
      <h3 class="fw2 fr"><%= link_to '<i class="fab fa-wikipedia-w"></i>'.html_safe, @service.wikipedia %> |
        <% if params[:scope] == 'pending' || params[:scope].nil? %>
          <%= link_to 'Archived Versions', service_path(scope: 'archived-versions') %></h3>
        <% elsif %>
          <%= link_to 'Back', service_path(scope: nil) %></h3>
        <% end %>
    </div>
  </div>

  <br>

  <% if params[:scope] == "pending" || params[:scope].nil? %>

    <%= render 'table', points: @points %>

  <% elsif params[:scope] == "archived-versions" %>

    <%= render 'versions', versions: @versions %>

  <% end %>
